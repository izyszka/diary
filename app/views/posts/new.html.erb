<div class="container">
  <h2 style = "text-align: center"><%= link_to("Posts", posts_path) %></h2>
  <h1>New Post</h1>

  <%= form_for(@post) do |form| %>
    <p><%= form.label("title") %></p>
    <p><%= form.text_field("title") %></p>
    <p><%= form.label("content") %></p>
    <p><%= form.text_area("content") %></p>
    <p><%= form.submit "Zapisz", class: "btn btn-primary" %></p>
  <% end %>
</div>
